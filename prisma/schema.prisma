// Prisma Schema for ProspectoSAS
// PostgreSQL with Prisma Postgres (Accelerate)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTH & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts    Account[]
  sessions    Session[]
  memberships WorkspaceMember[]
  leads       Lead[]            @relation("LeadOwner")
  activities  Activity[]
  tasks       Task[]            @relation("TaskAssignee")
  createdTasks Task[]           @relation("TaskCreator")
  auditLogs   AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// WORKSPACES & TEAMS
// ============================================

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  members         WorkspaceMember[]
  leads           Lead[]
  pipelineStages  PipelineStage[]
  tags            Tag[]
  campaigns       Campaign[]
  channelConfigs  ChannelConfig[]
  oauthTokens     OAuthToken[]
  auditLogs       AuditLog[]
  enrichmentJobs  EnrichmentJob[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  role        Role     @default(MEMBER)
  createdAt   DateTime @default(now())
  
  userId      String
  workspaceId String
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@map("workspace_members")
}

enum Role {
  ADMIN
  MEMBER
  READONLY
}

// ============================================
// CRM - LEADS
// ============================================

model Lead {
  id              String      @id @default(cuid())
  
  // Basic Info
  name            String
  email           String?
  phone           String?
  website         String?
  
  // Business Info (from Google Places)
  placeId         String?     @unique
  businessName    String?
  address         String?
  city            String?
  country         String?
  postalCode      String?
  latitude        Float?
  longitude       Float?
  category        String?
  rating          Float?
  reviewCount     Int?
  priceLevel      Int?
  openingHours    Json?
  
  // CRM Fields
  status          LeadStatus  @default(NEW)
  score           Int         @default(0) // 0-100
  webProbability  Int         @default(0) // 0-100 probability they need a website
  source          LeadSource  @default(MANUAL)
  notes           String?     @db.Text
  hasWhatsapp     Boolean?    // null = not checked, true = has WhatsApp, false = no WhatsApp
  whatsappCheckedAt DateTime? // When the WhatsApp check was last performed
  
  // Inbox Management
  archived        Boolean     @default(false)
  blocked         Boolean     @default(false)
  
  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  lastContactedAt DateTime?
  
  // Relations
  workspaceId     String
  ownerId         String?
  stageId         String?
  
  workspace       Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  owner           User?           @relation("LeadOwner", fields: [ownerId], references: [id])
  stage           PipelineStage?  @relation(fields: [stageId], references: [id])
  
  tags            LeadTag[]
  activities      Activity[]
  tasks           Task[]
  outboundMessages OutboundMessage[]
  inboundMessages  InboundMessage[]
  campaignMembers  CampaignMember[]
  stageHistory     LeadStageHistory[]
  enrichmentJobs   EnrichmentJob[]

  @@index([workspaceId])
  @@index([placeId])
  @@index([email])
  @@index([phone])
  @@map("leads")
}

enum EnrichmentStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}

model EnrichmentJob {
  id          String            @id @default(cuid())
  leadId      String
  workspaceId String
  status      EnrichmentStatus  @default(PENDING)
  source      String            @default("website_scrape")
  result      Json?
  error       String?           @db.Text
  startedAt   DateTime?
  finishedAt  DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  lead        Lead      @relation(fields: [leadId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([workspaceId])
  @@map("enrichment_jobs")
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL
  NEGOTIATION
  WON
  LOST
}

enum LeadSource {
  MANUAL
  GOOGLE_PLACES
  IMPORT
  REFERRAL
  WEBSITE
  CAMPAIGN
}

// ============================================
// PIPELINE
// ============================================

model PipelineStage {
  id          String   @id @default(cuid())
  name        String
  color       String   @default("#6366f1")
  order       Int
  isDefault   Boolean  @default(false)
  isWon       Boolean  @default(false)
  isLost      Boolean  @default(false)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  leads       Lead[]
  history     LeadStageHistory[]

  @@unique([workspaceId, order])
  @@map("pipeline_stages")
}

model LeadStageHistory {
  id          String   @id @default(cuid())
  movedAt     DateTime @default(now())
  
  leadId      String
  fromStageId String?
  toStageId   String
  
  lead        Lead           @relation(fields: [leadId], references: [id], onDelete: Cascade)
  toStage     PipelineStage  @relation(fields: [toStageId], references: [id])

  @@map("lead_stage_history")
}

// ============================================
// TAGS
// ============================================

model Tag {
  id          String   @id @default(cuid())
  name        String
  color       String   @default("#6366f1")
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  leads       LeadTag[]

  @@unique([workspaceId, name])
  @@map("tags")
}

model LeadTag {
  leadId String
  tagId  String
  
  lead   Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([leadId, tagId])
  @@map("lead_tags")
}

// ============================================
// ACTIVITIES & TASKS
// ============================================

model Activity {
  id          String       @id @default(cuid())
  type        ActivityType
  title       String
  description String?      @db.Text
  metadata    Json?
  createdAt   DateTime     @default(now())
  
  leadId      String
  userId      String
  
  lead        Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
  user        User @relation(fields: [userId], references: [id])

  @@index([leadId])
  @@map("activities")
}

enum ActivityType {
  NOTE
  CALL
  EMAIL
  WHATSAPP
  MEETING
  STAGE_CHANGE
  TASK_COMPLETED
  SYSTEM
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  dueDate     DateTime?
  priority    Priority   @default(MEDIUM)
  status      TaskStatus @default(PENDING)
  completedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  leadId      String?
  assigneeId  String?
  creatorId   String
  
  lead        Lead? @relation(fields: [leadId], references: [id], onDelete: Cascade)
  assignee    User? @relation("TaskAssignee", fields: [assigneeId], references: [id])
  creator     User  @relation("TaskCreator", fields: [creatorId], references: [id])

  @@index([leadId])
  @@index([assigneeId])
  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// ============================================
// CAMPAIGNS
// ============================================

model Campaign {
  id          String         @id @default(cuid())
  name        String
  description String?        @db.Text
  channel     MessageChannel
  status      CampaignStatus @default(DRAFT)
  template    String?        @db.Text
  templateB   String?        @db.Text // For A/B testing
  subjectA    String?        // For email A/B
  subjectB    String?
  
  // Scheduling
  scheduledAt DateTime?
  startedAt   DateTime?
  completedAt DateTime?
  
  // Rate limiting
  sendPerHour Int @default(30)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  members     CampaignMember[]

  @@map("campaigns")
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  CANCELLED
}

model CampaignMember {
  id          String              @id @default(cuid())
  status      CampaignMemberStatus @default(PENDING)
  sentAt      DateTime?
  variant     String?             // 'A' or 'B' for A/B testing
  
  campaignId  String
  leadId      String
  
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  lead        Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@unique([campaignId, leadId])
  @@map("campaign_members")
}

enum CampaignMemberStatus {
  PENDING
  SENT
  DELIVERED
  READ
  REPLIED
  FAILED
  SKIPPED
}

// ============================================
// MESSAGING
// ============================================

enum MessageChannel {
  WHATSAPP
  EMAIL
}

model OutboundMessage {
  id              String         @id @default(cuid())
  channel         MessageChannel
  to              String         // Phone or email
  content         String         @db.Text
  subject         String?        // For email
  status          MessageStatus  @default(PENDING)
  providerMsgId   String?        // External message ID
  metadata        Json?
  
  sentAt          DateTime?
  deliveredAt     DateTime?
  readAt          DateTime?
  failedAt        DateTime?
  errorMessage    String?
  
  createdAt       DateTime       @default(now())
  
  leadId          String
  lead            Lead           @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  statusEvents    MessageStatusEvent[]

  @@index([leadId])
  @@index([providerMsgId])
  @@map("outbound_messages")
}

model InboundMessage {
  id              String         @id @default(cuid())
  channel         MessageChannel
  from            String
  content         String         @db.Text
  subject         String?
  providerMsgId   String?
  metadata        Json?
  
  receivedAt      DateTime       @default(now())
  readAt          DateTime?
  
  leadId          String?
  lead            Lead?          @relation(fields: [leadId], references: [id])

  @@index([leadId])
  @@index([from])
  @@map("inbound_messages")
}

enum MessageStatus {
  PENDING
  QUEUED
  SENT
  DELIVERED
  READ
  FAILED
}

model MessageStatusEvent {
  id          String   @id @default(cuid())
  status      String
  timestamp   DateTime @default(now())
  metadata    Json?
  
  messageId   String
  message     OutboundMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("message_status_events")
}

// ============================================
// CHANNEL CONFIGURATIONS
// ============================================

model ChannelConfig {
  id          String         @id @default(cuid())
  channel     MessageChannel
  isActive    Boolean        @default(false)
  config      Json           // Encrypted config data
  
  workspaceId String
  workspace   Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@unique([workspaceId, channel])
  @@map("channel_configs")
}

model OAuthToken {
  id           String   @id @default(cuid())
  provider     String   // 'google', etc.
  accessToken  String   @db.Text
  refreshToken String?  @db.Text
  expiresAt    DateTime?
  scope        String?
  
  workspaceId  String
  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([workspaceId, provider])
  @@map("oauth_tokens")
}

// ============================================
// AUDIT LOG
// ============================================

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  entityType  String
  entityId    String
  oldData     Json?
  newData     Json?
  ipAddress   String?
  userAgent   String?
  
  createdAt   DateTime @default(now())
  
  userId      String?
  workspaceId String
  
  user        User?     @relation(fields: [userId], references: [id])
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([entityType, entityId])
  @@map("audit_logs")
}
